{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/app.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}